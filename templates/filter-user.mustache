{{!
    @template local_kbi/filter-user

    Example context (json):
    {
      "user_fullname": "Jo√£o da Silva",
      "url_ajax": "https://example.com/user_ajax_endpoint"
    }
}}
<div id="chart-user-button-open" style="display: none"
     data-defaultfullname="{{#str}}finduser, local_khelpdesk{{/str}}">
    <label>{{#str}}openuserby, local_khelpdesk{{/str}}:</label>
    <span class="select">
        {{{user_fullname}}}
    </span>

    <span class="badge badge-danger cursor-pointer"
          {{^user_id}}style="display:none"{{/user_id}}>X</span>

    <input type="hidden" name="find_user" value="{{{user_id}}}">
</div>
<div id="chart-user-datatable-select" style="display:none;"
     data-urlajax="{{{url_ajax}}}"
     title="{{#str}}reports_selectuser, local_kbi{{/str}}">
    <table id="datatable_user_select" class="table table-hover">
        <thead>
        <tr>
            <th class="text-center th_id">#</th>
            <th class="text-center th_fullname">{{#str}}user_table_fullname,local_kdashboard{{/str}}</th>
            <th class="text-center th_username">{{#str}}user_table_username,local_kdashboard{{/str}}</th>
            <th class="text-center th_email">{{#str}}user_table_email,local_kdashboard{{/str}}</th>
        </tr>
        </thead>
        <tbody class="hover-pointer"></tbody>
    </table>
</div>
