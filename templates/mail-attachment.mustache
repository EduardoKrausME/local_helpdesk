    {
      "responsefiles_count": true,
      "responsefiles": [
        {
          "fullurl": "https://example.com/file1.pdf",
          "filename": "file1.pdf"
        },
        {
          "fullurl": "https://example.com/file2.docx",
          "filename": "file2.docx"
        }
      ]
    }

}}

{{#responsefiles_count}}
    <div><strong>{{#str}}attachment, local_helpdesk{{/str}}</strong></div>
    {{#responsefiles}}
        <div><a href="{{fullurl}}">{{{filename}}}</a></div>
    {{/responsefiles}}
{{/responsefiles_count}}
