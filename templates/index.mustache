<form method="get">
    <div class="area-finds">
        <div class="area-find">
            <label for="find_status">{{#str}}ticketstatus, local_khelpdesk{{/str}}: </label>
            <select name="find_status" id="find_status">
                <option value="">{{#str}}ticketstatusnotclosed, local_khelpdesk{{/str}}</option>
                {{#status_options}}
                    <option value="{{key}}" {{selected}}>{{label}}</option>
                {{/status_options}}
            </select>
        </div>

        {{#has_manage}}
            <div class="area-find">
                <label for="find_priority">{{#str}}ticketpriority, local_khelpdesk{{/str}}: </label>
                <select name="find_priority" id="find_priority">
                    <option value=""></option>
                    {{#priority_options}}
                        <option value="{{key}}" {{selected}}>{{label}}</option>
                    {{/priority_options}}
                </select>
            </div>
        {{/has_manage}}

        <div class="area-find">
            <label for="find_category">{{#str}}ticketcategory, local_khelpdesk{{/str}}: </label>
            <select name="find_category" id="find_category">
                <option value=""></option>
                {{#category_options}}
                    <option value="{{key}}" {{selected}}>{{label}}</option>
                {{/category_options}}
            </select>
        </div>
    </div>

    <div class="area-finds" style="margin-top: 10px">
        <div class="area-find">
            {{{find_course}}}
        </div>

        {{#has_manage}}
            <div class="area-find">
                {{{find_user}}}
            </div>
        {{/has_manage}}
        <input type="submit" value="{{#str}}search{{/str}}">
    </div>
</form>

<table class="generaltable" cellspacing="0" cellpadding="5">
    <thead>
    <tr>
        <th>&nbsp;</th>
        <th>{{#str}}fullname{{/str}}</th>
        <th>{{#str}}course{{/str}}</th>
        <th>{{#str}}ticketsubject, local_khelpdesk{{/str}}</th>
        <th>{{#str}}ticketstatus, local_khelpdesk{{/str}}</th>
        <th>{{#str}}ticketpriority, local_khelpdesk{{/str}}</th>
        <th>{{#str}}ticketcategory, local_khelpdesk{{/str}}</th>
        <th>{{#str}}ticketcreatedat, local_khelpdesk{{/str}}</th>
        {{#has_manage}}
            <th>&nbsp;</th>
        {{/has_manage}}
    </tr>
    </thead>
    <tbody>
    {{#tickets}}
        <tr onclick="location.href='ticket.php?id={{idkey}}'">
            <td><img src="{{user_picture}}" alt="{{user_fullname}}" class="user_picture"></td>
            <td>{{user_fullname}}</td>
            <td>{{course_fullname}}</td>
            <td>{{subject}}</td>
            <td>
                <span class="badge status-{{status}}">{{status_translated}}</span>
            </td>
            <td>
                <span class="badge priority-{{priority}}">{{priority_translated}}</span>
            </td>
            <td>{{category_translate}}</td>
            <td>{{createdat}}</td>
            {{#has_manage}}
                <td onclick="event.stopImmediatePropagation()">
                    <a href="?action=edit&amp;id={{idkey}}" class="badge badge-success">{{#str}}edit{{/str}}</a>
                </td>
            {{/has_manage}}
        </tr>
    {{/tickets}}
    </tbody>
</table>

<div class="control-buttons">
    <a href="?action=add&courseid={{courseid}}" class="btn btn-info text-nowrap">{{#str}}
    addticket, local_khelpdesk{{/str}}</a>

    <div style="width: 100%"></div>
    {{#has_categorymanage}}
        <a href="categories.php"
           class="btn btn-success text-nowrap">{{#str}}categories, local_khelpdesk{{/str}}</a>
    {{/has_categorymanage}}
    {{#has_siteconfig}}
        <a href="/admin/settings.php?section=local_khelpdesk"
           target="_blank">
            <img src="/theme/image.php/boost/local_khelpdesk/0/settings"
                 style="width: 36px;height: 36px;min-width: 36px;min-height: 36px">
        </a>
    {{/has_siteconfig}}
</div>
