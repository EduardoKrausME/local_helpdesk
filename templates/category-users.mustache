{{!
    @template local_helpdesk/category-users

    Example context (json):
    {
      "contextid": 12345,
      "roleid": 6789,
      "existinguserselector": "<select><option value='1'>User 1</option><option value='2'>User 2</option></select>",
      "potentialuserselector": "<select><option value='3'>User 3</option><option value='4'>User 4</option></select>"
    }

}}

<h3>{{#str}}category_users_title, local_helpdesk{{/str}}</h3>

<a href="{{config.wwwroot}}/admin/roles/assign.php?contextid={{contextid}}&roleid={{roleid}}"
    target="_blank" class="btn btn-info">{{#str}}helpdesk_manage_users, local_helpdesk{{/str}}</a>

<div class="select-users mt-2">
    <div id="existingcell">
        <label>{{#str}}category_users_responses, local_helpdesk{{/str}}</label>
        {{{existinguserselector}}}
    </div>
    <div id="buttonscell">
        <div id="addcontrols">
            <input class="btn btn-secondary" name="add" id="add" type="submit"
                   value="&lt;&lt;&nbsp;{{#str}}add{{/str}}" title="{{#str}}add{{/str}}"><br/>
        </div>

        <div id="removecontrols">
            <input class="btn btn-secondary" name="remove" id="remove" type="submit"
                   value="{{#str}}remove{{/str}}&nbsp;&gt;&gt;" title="{{#str}}remove{{/str}}">
        </div>
    </div>
    <div id="potentialcell">
        <label>{{#str}}category_users_all, local_helpdesk{{/str}}</label>
        {{{potentialuserselector}}}
    </div>
</div>
